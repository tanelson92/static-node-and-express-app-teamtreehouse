extends layout.pug

block content

  nav.nav
    a(href='/')
      span &larr;
      |  Back

  article.portfolio-projects
    .inner-wrapper.flex-row-wrap.two-col
      .project-info-box.box

        h1= project_name
        p= description

      .project-tech-links-box.box
        h6 Technologies
        ul

          //- List of each technology associated with this project. 
          each tech in technologies
            li= tech
          

        //- Github and Live Demo Links
        a.btn-link(href=live_link, target="_blank") Live Demo
        a.btn-link(href=github_link, target="_blank") GitHub Repo

    .project-img-box.box

      //- Each image associated with this project. 
      each img in image_urls
        img.project-img(src=`/static/images/${img}`, alt=project_name)

    nav.nav
      a(href='/')
        span &larr;
        |  Back
